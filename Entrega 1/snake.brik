# ==================================
# DEFINICIÓN DE LOS ELEMENTOS
# ==================================

# La serpiente está compuesta por segmentos que se mueven en cadena.
# Cada segmento hereda la posición del anterior.

serpiente = {
    "color": "green",
    "cabeza_color": "darkgreen",
    "forma": "cuadrado",
    "longitud_inicial": longitud_inicial
}

# Los alimentos aparecen de forma aleatoria en el tablero
comida = {
    "color": "red",
    "forma": "circulo",
    "puntos_por_comida": 10
}

# ==================================
# REGLAS DEL JUEGO
# ==================================

# Regla para movimiento continuo de la serpiente
